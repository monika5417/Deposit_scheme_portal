package com.TestMapping.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.autoconfigure.AutoConfigureOrder;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RestController;

import com.TestMapping.entity.Laptop;
import com.TestMapping.entity.Student;
import com.TestMapping.repository.LaptopRepository;
import com.TestMapping.repository.StudentRepository;

@RestController
public class StudentDataController {

	@Autowired
	private StudentRepository studentRepository;
	
	@Autowired
	private LaptopRepository laptopRepository;
	
	@GetMapping("/saveStudent")
	public void saveStudent() {
		 Student s = new Student();
	        s.setName("Test");
	        s.setStandard("second");
	        
	        // Save the Student first
//	        Student savedStudent = studentRepository.save(s);
	        
	        Laptop lap = new Laptop();
	        lap.setlName("Dell");
//	        lap.setStudent(s); // Set the student after saving
	        // Save the Laptop
	        s.setLaptop(lap);
	        Laptop save = laptopRepository.save(lap);
	        s.setLaptop(save);
	        studentRepository.save(s);
	}
	
	@GetMapping("/{id}")
	public Laptop getStudentData(@PathVariable Long id) {
		return laptopRepository.findById(id).get();
	} 
	
}
