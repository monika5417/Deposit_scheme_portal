package com.test.javaPractice;

public class String_practice_question {

	
	public static StringBuffer reverseStringUsingStringBuffer(String str) {
//	Reverse a String: Write a method to reverse a given string.
	StringBuffer sb = new StringBuffer(str);
	StringBuffer reverse = sb.reverse();
	System.out.println("The reverse string by string buffer : " +reverse);
	return reverse;
		
	}
	
	public static StringBuilder reverseStringUsingStringBuilder(String str) {
//		Reverse a String: Write a method to reverse a given string.
		StringBuilder sb = new StringBuilder(str);
	StringBuilder reverse = sb.reverse();
		System.out.println("The reverse string by StringBuilder : " +reverse);
		return reverse;
			
		}
	
	public static String reverseStringUsingLoop(String str) {
//		str = java
		String reverse = "";
		for(int i=0; i<str.length(); i++) {
			 reverse += str.charAt(i);
		}
		System.out.println("the reverse string via loop : " +reverse);
		
		return null;
		
	}
	
	
	public static void main(String[] args) {
		reverseStringUsingStringBuffer("java");
		
		reverseStringUsingStringBuilder("Programming");
	}
}
