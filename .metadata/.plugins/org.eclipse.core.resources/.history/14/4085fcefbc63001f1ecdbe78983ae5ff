package com.test.javaPractice;

public class Pallindrom_string {

	
	public static String palindromString(String str) {
		
//		Palindrome Check: Check if a given string is a palindrome (reads the same forwards and backwards).
//		madam”, “racecar”, “12321”.
		
		
		
		
		String reverse = "";
		for(int i=0; i<str.toLowerCase().length();i++) {
			reverse =  str.toLowerCase().charAt(i)+reverse;
		}
		if(reverse.equals(str.toLowerCase())) {
			System.out.println("The give string is pallindrom : " +reverse);
		}else {
		System.out.println("The given string is not pallindrom : " +reverse);
		}
		return null;
	}
	
	
	public static void vowleOrConsonant(String str) {
//		Count Vowels and Consonants: Write a method to count the number of vowels and consonants in a string.
		int vowels=0, consonant=0;
		
		String lowerCase = str.toLowerCase();
		System.out.println("aaaaaaaaaaaa"+lowerCase.toCharArray());
		for(char c:lowerCase.toCharArray()) {
			
			if(c=='a' || c=='e'||c=='i' || c=='o'||c=='u') 
			{
				vowels++;
			}else {
				consonant++;
			}
		}
		
		System.out.println("the count of vowel is  : "+vowels);
		System.out.println("the count of vowel is  : "+consonant);
		
	}
	
	public static void concatString(String str1, String str2) {
//		String Concatenation: Write a method to concatenate two strings without using the + operator
		
		System.out.println("The concat string are : "+str1.concat(str2));
	}
	
	public static void main(String[] args) {
		palindromString("Madam");
		vowleOrConsonant("Hello World");
	}
}
